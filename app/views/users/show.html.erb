<main>
  <section>
    <h2>
      User Summary: <%= @user.username %>
    </h2>
  
  </section>
  <section>
   <%= link_to "Back to media ranks", root_path %>
   <%= link_to "See all users", users_path%>
  </section>
  <section>
    <h3><%=@user.votes.length%> Votes for this Album</h3>
    <table>
      <thead>
        <tr>
          <th>Media Title</th>
          <th>Created by</th>
          <th>Published</th>
          <th>Category</th>
          <th>Voted on</th>
        </tr>
        <body>
          
          <% @user.votes.each do |vote|%>
          <tr>
            <%work = Work.find_by(id: vote.work_id)%>
            <td><%= work.title%> </td>
            <td><%= work.creator%></td>
            <td><%= work.publication_year%></td>
            <td><%= work.category%></td>
            <td><%= vote.created_at.strftime("%m/%d/%Y")%></td>
          </tr>
          <%end%>
   
          
        </body>
      </thead>
    </table>
  </section>
</main>
